{
    "name": "neuhauser/filament-management",
    "description": "3D-Print Filament Management System with NFC Integration",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "phpmailer/phpmailer": "^6.8",
        "ramsey/uuid": "^4.7",
        "endroid/qr-code": "^5.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Filament\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Filament\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}